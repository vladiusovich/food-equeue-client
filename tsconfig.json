{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": [
            "dom",
            "es6"
        ],
        "allowJs": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "sourceMap": true,
        "paths": {
            "@ui": [
                "./src/components/ui/index"
            ],
            "@typography": [
                "./src/styles/typography/index"
            ],
            "@mixins": [
                "./src/styles/typography/Typography.styled"
            ],
            "@type/*": [
                "./src/types/*"
            ],
            "@hook/*": [
                "./src/hooks/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ],
            "@api/*": [
                "./src/api/*"
            ],
            "@helpers/*": [
                "./src/helpers/*"
            ],
            "@common/*": [
                "./src/components/common/*"
            ],
            "@resources": [
                "./src/resources/*"
            ],
        },
    },
    "include": [
        "src"
    ]
}